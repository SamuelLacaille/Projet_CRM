{% extends 'base.html.twig' %}

{% block title %}Historique d'événements{% endblock %}

{% block body %}
    <div id="utilisateur"></div>
    <h1>Historique</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Evénement</th>
            </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td>{{ ticket.id }}</td>
                <td>{{ ticket.heure ? ticket.heure|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ ticket.event }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}



{% block javascripts %}
    {{ encore_entry_script_tags('rep_log_react') }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Planning{% endblock %}

{% block body %}
    <h1>Planning</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ planning.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ planning.titre }}</td>
            </tr>
            <tr>
                <th>Debut</th>
                <td>{{ planning.debut ? planning.debut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ planning.fin ? planning.fin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ planning.description }}</td>
            </tr>
            <tr>
                <th>JourComplet</th>
                <td>{{ planning.jourComplet ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>EmailRdv</th>
                <td>{{ planning.emailRdv }}</td>
            </tr>
            <tr>
                <th>EmailCommercial</th>
                <td>{{ planning.emailCommercial }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('calendrier_index') }}">back to list</a>

    <a href="{{ path('calendrier_edit', {'id': planning.id}) }}">edit</a>

    {{ include('calendrier/_delete_form.html.twig') }}
{% endblock %}
